    <style>
        .loader {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100%;
            position: fixed;
            background: white;
            z-index: 100000;
            top: 0;
            font-size: clamp(30px, 3vw, 40px);
    
            font-weight: bolder;
        }
    
        .spain {
            width: .5em;
            height: .5em;
            background: #000000;
            border-radius: 50%;
            margin: 5px;
            animation: spin 0.6s ease-in-out infinite;
        }
    
        .spain:nth-child(1) {
            animation-delay: 0.1s;
        }
    
        .spain:nth-child(2) {
            animation-delay: 0.2s;
        }
    
        .spain:nth-child(3) {
            animation-delay: 0.3s;
        }
    
        @keyframes spin {
            0% {
                transform: translateY(0);
            }
    
            50% {
                transform: translateY(-10px);
            }
    
            100% {
                transform: translateY(0);
            }
        }
    </style>
